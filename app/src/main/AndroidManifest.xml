<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

<!--Requests -->
        <activity
            android:name=".Home.ui.requests.RequestDetails.ui.theme.RequestDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Home.ui.requests.viewHolder.RequestViewHolder"
            android:exported="false" />
<!--Products -->
        <activity
            android:name=".Home.ui.products.ProductDetails.ui.theme.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Home.ui.products.viewHolder.ProductViewHolder"
            android:exported="false" />
        <activity
            android:name=".Home.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home" />
<!-- Main-->
        <activity
            android:name=".Main.MainActivity"
            android:exported="true"
            android:label="@string/title_activity_spash_screen"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>